<Window x:Name="UVUFac_Elevator_Simulator" x:Class="CS3260_Simulator_Team6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS3260_Simulator_Team6"
        mc:Ignorable="d"
        Title="UVUFac Elevator Simulator" Height="350" Width="525" ResizeMode="NoResize">
    <Grid Background="#FFB0AEAE">
        <Button x:Name="StartButton" Content="Start" HorizontalAlignment="Left" Margin="173,281,0,0" VerticalAlignment="Top" Width="75" Click="StartButton_Click"/>
        <Button x:Name="StopButton" Content="Stop" HorizontalAlignment="Left" Margin="283,281,0,0" VerticalAlignment="Top" Width="75"/>
        <Image HorizontalAlignment="Left" Height="224" Margin="10,10,0,0" VerticalAlignment="Top" Width="193" Source="resources/elevatorImage.jpg"/>
        <Label Content="Passenger for Simulation" HorizontalAlignment="Left" Margin="208,87,0,0" VerticalAlignment="Top" Background="#FFB0AEAE"/>
        <ComboBox x:Name="PassangerTypeComboBox" HorizontalAlignment="Left" Margin="361,116,0,0" VerticalAlignment="Top" Width="97">
            <ComboBoxItem Content="Adult" IsSelected="True"/>
            <ComboBoxItem Content="Child"/>
        </ComboBox>
        <Label Content="Passanger Type" HorizontalAlignment="Left" Margin="262,114,0,0" VerticalAlignment="Top"/>
        <Label Content="Destination Floor" HorizontalAlignment="Left" Margin="254,146,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="DestinationFloorComboBox" HorizontalAlignment="Left" Margin="361,149,0,0" VerticalAlignment="Top" Width="45">
            <ComboBoxItem Content="1" IsSelected="True"/>
            <ComboBoxItem Content="2"/>
            <ComboBoxItem Content="3"/>
            <ComboBoxItem Content="4"/>
            <ComboBoxItem Content="5"/>
            <ComboBoxItem Content="6"/>
            <ComboBoxItem Content="7"/>
            <ComboBoxItem Content="8"/>
        </ComboBox>
        <Label Content="Entry Floor" HorizontalAlignment="Left" Margin="286,178,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="EntryFloorComboBox" HorizontalAlignment="Left" Margin="362,181,0,0" VerticalAlignment="Top" Width="44">
            <ComboBoxItem Content="1"/>
            <ComboBoxItem Content="2" IsSelected="True"/>
            <ComboBoxItem Content="3"/>
            <ComboBoxItem Content="4"/>
            <ComboBoxItem Content="5"/>
            <ComboBoxItem Content="6"/>
            <ComboBoxItem Content="7"/>
            <ComboBoxItem Content="8"/>
        </ComboBox>
        <!--<Button x:Name="AddPassangerButton" Content="Add Passenger" HorizontalAlignment="Left" Margin="362,218,0,0" VerticalAlignment="Top" Width="96" Click="AddPassangerButton_Click"/>-->
    </Grid>
</Window>
